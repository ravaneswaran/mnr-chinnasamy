<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="01" author="ravaneswaran">
        <createTable tableName="bank_account">
            <column name="uuid" type="varchar(200)" >
                <constraints primaryKey="true"/>
            </column>
            <column name="bank_name" type="varchar(100)" />
            <column name="account_number" type="varchar(100)" />
            <column name="account_type" type="varchar(100)" />
            <column name="ifsc_code" type="varchar(100)" />
            <column name="created_by" type="varchar(100)" />
            <column name="modified_by" type="varchar(100)" />
            <column name="created_date" type="datetime" />
            <column name="modified_date" type="datetime" />
        </createTable>
    </changeSet>

</databaseChangeLog>